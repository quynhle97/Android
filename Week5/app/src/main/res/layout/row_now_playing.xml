<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/img_film"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/now_playing"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="3" android:ellipsize="end"
            android:id="@+id/tv_title_film" app:layout_constraintStart_toEndOf="@id/img_film"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold" android:textSize="24sp" android:textColor="@android:color/holo_blue_bright"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:textAlignment="textStart"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_detail_film"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title_film" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@id/img_film"
            android:maxLines="3" android:ellipsize="end"
            android:layout_marginStart="8dp" android:textColor="@android:color/holo_orange_light"/>
</android.support.constraint.ConstraintLayout>